{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "http://github.com/johnstonskj/sledge/schema/2022-12/config.json",
  "title": "Configuration",
  "description": "This schema covers the configuration data files.",

  "type": "object",
  "properties": {
    "version": {
      "description": "The version information describing the schema",
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "client": {
      "description": "Client configuration",
      "type": "object",
      "properties": {
        "kind": {
          "type": "object",
          "properties": {
            "local": {
              "$ref": "#/$defs/store"
            },
            "remote": {
              "type": "object",
              "properties": {
                "server_url": { "type": "string" }
              },
              "required": [ "server_url" ]
            }
          },
          "oneOf": [
            { "required": [ "local" ] },
            { "required": [ "remote" ] }
          ]
        },
        "locale": {
          "type": "string",
          "pattern": "^(?<language>[a-z]{2})_(?<region>[A-Z]{2})(?:\.(?<codeset>[A-Z0-9\-]+))?(?:@(?<modifier>[a-z0-9\-]+))?$"
        }
      },
      "required": [ "kind" ]
    },
    "server": {
      "description": "Server configuration",
      "type": "object",
      "properties": {
        "bindings": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "host": {
                "type": "string",
                "anyOf": [
                  { "format": "hostname" },
                  { "format": "idn-hostname" },
                  { "format": "ipv4" },
                  { "format": "ipv6" }
                ]
              },
              "port": {
                "type": "integer",
                "minimum": 1
              },
              "ssl": {
                "type": "object",
                "properties": {
                  "private_key_pem_file": { "type": "string", "minLength": 4 },
                  "certificate_chain_pem_file": { "type": "string", "minLength": 4 },
                },
                "required": [
                  "private_key_pem_file",
                  "certificate_chain_pem_file"
                ],
              },
              "options": {
                "type": "object",
                "properties": {
                  "backlog": { "type": "integer", "minimum": 64, "maximum": 2048, "default": 2048 },
                  "max_connections": { "type": "integer", "minimum": 10, "default": 25000 },
                }
              }
            },
            "required": [ "host",  "port" ]
          },
          "minItems": 1
        },
        "store": { "$ref": "#/$defs/store" }
      },
      "required": [ "bindings", "store" ]
    }
  },
  "required": ["version"],
  "additionalProperties": false,
  "oneOf": [
     { "required": [ "client" ] },
     { "required": [ "server" ] },
     { "required": [ "client", "server" ] }
  ],

  "$defs": {
    "store": {
      "type": "object",
      "properties": {
        "file_system": {
          "type": "object",
          "properties": {
            "path": { "type": "string" }
          }
        },
        "sql": {
          "type": "object",
          "properties": {
            "connection": {
              "type": "string",
              "pattern": "^(?<driver>[a-z][a-z0-9]+):(?<rest>.+)$",
              "format": "uri"
            },
            "sqlite": {
              "type": "object",
              "properties": {
                "path": { "type": "string" },
                "auto_vacuum": {
                  "type": "string",
                  "enum": [
                    "none",
                    "incremental",
                    "full"
                  ],
                  "default": "none"
                },
                "busy_timeout": { "type": "number", "default": 5.0 },
                "create_if_missing": { "type": "boolean", "default": false },
                "immutable": { "type": "boolean", "default": false },
                "foreign_keys": { "type": "boolean", "default": true },
                "journal_mode": {
                  "type": "string",
                  "enum": [
                    "delete",
                    "truncate",
                    "persist",
                    "memory",
                    "write_ahead",
                    "off"
                  ]
                },
                "locking_mode": {
                  "type": "string",
                  "enum": [
                    "exclusive",
                    "normal"
                 ],
                 "default": "normal"
                },
                "page_size": { "type": "integer", "default": 4096 },
                "read_only": { "type": "boolean", "default": false },
                "serialized": { "type": "boolean", "default": false },
                "shared_cache": { "type": "boolean", "default": false },
                "statement_cache_capacity": { "type": "integer", "default": 100 },
                "synchronous": {
                  "type": "string",
                  "enum": [
                    "off",
                    "normal",
                    "full",
                    "extra"
                 ],
                 "default": "full"
                }
              },
              "required": [ "path" ]
            }
          },
          "oneOf": [
            { "required": [ "connection" ] },
            { "required": [ "sqlite" ] }
          ]
        }
      },
      "oneOf": [
        { "required": [ "file_system" ] },
        { "required": [ "sql" ] }
      ]
    }
  }
}
